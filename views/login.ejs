<html>
    <head>
        <title>SK Broilers</title>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="icon" href="../pic/09092015162707_Poultries_in_Kuwait.png">
        <link rel="stylesheet" href="public/CSS/bootstrap.min.css">
        <link rel="stylesheet" href="public/CSS/login.css">
    </head>
    <body class="login-block">
        <div class="container row-flex">
        <div class="row custom-container">
            <div class="col-md-push-12 col-md-4 col-xs-12 login-sec">
                <h2 class="text-center">Login now</h2>
                <form action="/login" method="POST" class="login-form">
                    <div class="form-group">
                        <label><b>USERNAME</b></label>
                        <input name="username" type="text" id="uname" class="form-control" placeholder="Email Id" required>
                        <label><b>PASSWORD</b></label>
                        <input name="password" type="password" id="pwd" class="form-control" placeholder="password" required>
                    </div>
                    <div class="form-check">
                        <label class="form-check-label">
                            <input type="checkbox" class="form-check-label">
                            <small><b>Remember Me</b></small>
                        </label>
                        <button type="submit"  class="btn btn-login">Submit</button>
                    </div>
                </form>
            </div>
            <div class="col-md-pull-12 col-md-8 col-xs-12 order-xs-1 banner-sec">
                    <div id="indicators" class="carousel slide" data-ride="carousel">
                        <ol class="carousel-indicators">
                             <li data-target="#indicators" data-slide-to="0" ></li>
                             <li data-target="#indicators" data-slide-to="1" class="active"></li>
                             <li data-target="#indicators" data-slide-to="2"></li>
                        </ol>
                        <div class="carousel-inner" role="listbox">
                            <div class="carousel-item ">
                                <img class="d block img-fluid" 
                                src="public/pic/WhatsApp%20Image%202018-08-10%20at%2010.18.56%20AM.jpeg" alt="first slide">
                            </div>
                            <div class="carousel-item active">
                                <img class="d block img-fluid" src="public/pic/White%20chickens%20farm%20broilers%20close%20up.jpg" alt="second slide">
                            </div>
                            <div class="carousel-item">
                                <img class="d block img-fluid" 
                                src="public/pic/Suguna-Poultry-Farm-63-with-Suguna-Poultry-Farm.jpg" alt="third slide">
                            </div>
                        </div>
                    </div>    
                </div>
        </div>    
        </div>
        <script src="public/JS/jquery-3.3.1.min.js"></script>    
        <script src="public/JS/bootstrap.min.js"></script>
        <script>
            $('.carousel').carousel()
        </script>
        <script src="public/JS/login.js"></script>
    </body>
</html>    